<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".YourQualitiesSliderActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/headingTextSize"
        android:text="@string/sliderHeading"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginTop="@dimen/myMarginTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rich"
        android:textColor="@color/black"
        android:textSize="@dimen/myTextSize"
        android:layout_gravity="center" />

    <SeekBar
        android:id="@+id/richBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="1"
        android:progressDrawable="@drawable/custom_progress"
        />

    <TextView
        android:layout_marginTop="@dimen/myMarginTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/social"
        android:textColor="@color/black"
        android:textSize="@dimen/myTextSize"
        android:layout_gravity="center" />

    <SeekBar
        android:id="@+id/socialBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="1"
        android:progressDrawable="@drawable/custom_progress" />

    <TextView
        android:layout_marginTop="@dimen/myMarginTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intelligence"
        android:textColor="@color/black"
        android:textSize="@dimen/myTextSize"
        android:layout_gravity="center" />

    <SeekBar
        android:id="@+id/intelligenceBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="1"
        android:progressDrawable="@drawable/custom_progress"
        />

    <TextView
        android:layout_marginTop="@dimen/myMarginTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fun"
        android:textColor="@color/black"
        android:textSize="@dimen/myTextSize"
        android:layout_gravity="center" />

    <SeekBar
        android:id="@+id/funBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="1"
        android:progressDrawable="@drawable/custom_progress" />

    <TextView
        android:layout_marginTop="@dimen/myMarginTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/looks"
        android:textColor="@color/black"
        android:textSize="@dimen/myTextSize"
        android:layout_gravity="center" />

    <SeekBar
        android:id="@+id/looksBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="1"
        android:progressDrawable="@drawable/custom_progress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:text="@string/next"
        android:layout_gravity="center">
    </Button>



</LinearLayout>